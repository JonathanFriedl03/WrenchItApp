
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Service Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Edit" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Service Type</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rate</th>
                <th>Description</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.Name</td>
                    <td>@data.Rate</td>
                    <td>@data.Description</td>
                    <td>@data.Category</td>
                    <td>

                        <div class="text-center">
                            <a href="/ServiceType/Edit/@data.Id" class='btn btn-success text-white' style='cursor:pointer; width:100px;'>
                                <i class='far fa-edit'></i> Edit
                            </a>
                            &nbsp;
                            <a onclick=Delete("/ServiceType/Delete/@data.Id") class='btn btn-danger text-white' style='cursor:pointer; width:100px;'>
                                <i class='far fa-trash-alt'></i> Delete
                            </a>
                        </div>
                    </td>


                </tr>

            }
        </tbody>
    </table>
   
</div>


@section Scripts{
    <script src="~/js/serviceType.js"></script>
}