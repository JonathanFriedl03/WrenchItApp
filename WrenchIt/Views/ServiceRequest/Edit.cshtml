@model WrenchIt.Models.ServiceRequestViewModel
@{
    var title = "Update Service Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-9">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsCompleted"></label>
                </div>
                @if (!Model.IsCompleted)
                {
                    <div class="col-8 bg-danger">
                        InComplete

                    </div>
                }
                else
                {
                    <div class="col-8 bg-success">
                        Completed

                    </div>
                }
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CreatedAt">Date</label>
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.CreatedAt)

                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Customer"></label>
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.Customer)

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Quote"></label>
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.Quote)

                </div>
            </div>
            <div class="form-group row">
                <div class="col-8">

                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Mark as Completed</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>