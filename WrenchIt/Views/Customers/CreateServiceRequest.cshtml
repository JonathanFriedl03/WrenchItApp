@model WrenchIt.Models.CServiceRequestViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateServiceRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Service">Select Service</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ServiceId, new SelectList(Model.ServiceList, "Id", "Name"), "Select Service  ", new { @class = "form-control", required = "required" })

                </div>
            </div>



            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
