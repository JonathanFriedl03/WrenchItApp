@model WrenchIt.Models.Category
@{
    var title = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*create a form for new order request*@
<form method="post" asp-action="UpdateInsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*determine whether we are going to edit or add category*@
        @if(Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
            title = "Edit Category";
        }
        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DisplayOrder"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        //Edit button and bak to list
                        <partial name="_EditBacktoList" model="Model.Id" />
                    }
                    else
                    {
                        //create button and back to list
                        <partial name="_CreateBacktoList" />
                                 }
                    </div>
            </div>
        </div>
    </div>
</form>

